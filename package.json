{
  "name": "snippy",
  "version": "1.0.0",
  "description": "本地桌面應用，幫助開發者管理自己的程式碼片段。  支援快速搜尋、標籤分類、語法高亮，提升開發效率。",
  "main": "build/dist-electron/main.js",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "io.github.qiu1996.snippy",
    "productName": "Snippy",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "package.json"
    ],
    "mac": {
      "target": ["dmg", "zip"]
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.14",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.7.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "concurrently": "^9.2.1",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-plugin-electron": "^0.29.0"
  },
  "dependencies": {
    "@codemirror/commands": "^6.9.0",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.6",
    "better-sqlite3": "^12.4.1",
    "codemirror": "^6.0.2",
    "electron-log": "^5.4.3",
    "vue": "^3.5.22"
  }
}
